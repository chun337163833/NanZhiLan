page {
  background: #f5f5f5;
  position: relative;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-flex-flow: column;
}

#main {
  -webkit-flex: 1;
  flex: 1;
}

image {
  width: 100%;
  height: 100%;
}

.details-h {
  padding: 0 80rpx;
  height: 210rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
  background: #e02e24;
  color: #fff;
}

.details-h image {
  width: 83rpx;
  height: 103rpx;
}

.address {
  min-height: 135rpx;
  padding: 0 35rpx 0 25rpx;
  align-items: center;
}

.address .address-icon {
  width: 34rpx;
  height: 46rpx;
  margin-right: 25rpx;
}

.address-info {
  font-size: 32rpx;
  padding: 20rpx;
}

.address-info .address-L {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  line-height: 40rpx;
}

.order-group {
  margin-top: 25rpx;
}

.order-h {
  padding: 0 20rpx;
  height: 85rpx;
  align-items: center;
  justify-content: space-between;
}

.order-h .order-shop {
  align-items: center;
}

.order-h .order-shop .icon {
  width: 55rpx;
  height: 55rpx;
  background: #222;
}

.order-h .order-shop text {
  margin: 0 20rpx;
  font-size: 30rpx;
}

.order-h .order-shop .arrow {
  width: 14rpx;
  height: 27rpx;
}

.order-h .order-type {
  font-size: 32rpx;
  color: #e02e24;
}

.order-goods {
  height: 200rpx;
  background: #f2f2f2;
  padding: 20rpx;
  box-sizing: border-box;
}

.order-goods .goods-img {
  width: 160rpx;
  height: 160rpx;
  background: #222;
}

.order-goods .goods-info {
  margin-left: 20rpx;
  justify-content: space-between;
}

.order-goods .goods-info_left {
  width: 80%;
}

.order-goods .goods-info_right {
  text-align: center;
}

.order-goods .goods-info .goods-title {
  font-size: 30rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.order-goods .goods-info .goods-prop {
  font-size: 26rpx;
  color: #949495;
}

.order-goods .goods-info .goods-price {
  font-size: 30rpx;
}

.order-goods .goods-info .goods-price-old {
  font-size: 26rpx;
  color: #333;
  text-decoration: line-through;
}

.order-goods .goods-info .goods-num {
  font-size: 26rpx;
  color: #949495;
}

.order-price {
  padding: 0 20rpx;
  height: 85rpx;
  line-height: 85rpx;
  text-align: right;
  font-size: 30rpx;
  border-bottom: 1px solid #ddd;
}

.order-price text {
  font-size: 30rpx;
}

.order-group .user-option {
  height: 85rpx;
  align-items: center;
  padding: 0 20rpx;
  text-align: center;
}

.order-group .user-option .item {
  font-size: 30rpx;
  margin-left: 10rpx;
  padding: 5rpx 10rpx;
  align-items: center;
  justify-content: center;
}

.order-group .user-option .item:first-child {
  border-right: 1px solid #ddd;
}

.order-group .user-option .item.msg image {
  width: 45rpx;
  height: 41rpx;
  margin-right: 20rpx;
}

.order-group .user-option .item.phone image {
  width: 44rpx;
  height: 42rpx;
  margin-right: 20rpx;
}

.order-info {
  margin-top: 25rpx;
  padding: 30rpx;
  font-size: 30rpx;
}

#footer {
  /* position: fixed;
  bottom: 0;
  left: 0; */
  height: 46px;
  width: 100%;
  background: #fff;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

#footer .item {
  font-size: 30rpx;
  margin-left: 10rpx;
  padding: 5rpx 10rpx;
  border: 1px solid #ddd;
  border-radius: 5rpx;
}
