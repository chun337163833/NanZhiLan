button{
  border:none;
}
image {
  width: 100%;
  height: 100%;
}
#header {
  padding: 0 30rpx;
  box-sizing: border-box;
  height: 510rpx;
  background: #fa4756;
  overflow: hidden;
}

#header .user-photo {
  margin: 38rpx auto 18rpx;
  width: 115rpx;
  height: 115rpx;
  background: black;
  border: 3rpx solid #fff;
  border-radius: 50%;
}
#header .user-photo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
#header .title {
  margin: 0 auto;
  width: 40%;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
}

.goods {
  padding: 20rpx;
  margin-top: 38rpx;
  border-radius: 10rpx;
}
.goods .goods-img {
  margin-right: 20rpx;
  width: 160rpx;
  height: 160rpx;
  background: black;
}
.goods .goods-img image {
  width: 100%;
  height: 100%;
}
.goods .goods-info {
  flex: 1;
  height: 160rpx;
}
.goods .goods-info .goods-title {
  font-size: 24rpx;
  line-height: 30rpx;
  min-height: 60rpx;
}
.goods .goods-info .goods-price {
  margin-top: 66rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  justify-content: space-between;
}
.goods .goods-info .goods-price .old-price {
  color: #bbb;
}
.goods .goods-info .goods-price .now-price {
  color: #f00;
}


#main .cont {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  height: 275rpx;
  background: #f5f5f5;
  
}
#main .cont .title {
  margin: 35rpx 0;
  font-size: 34rpx;
  line-height: 34rpx;
  text-align: center;
}

#main .cont .tips {
  font-size: 24rpx;
  line-height: 24rpx;
  text-align: center;
  color: #a6a6a6;
}

#main .cont .option {
  margin-top: 30rpx;
  height: 86rpx;
  align-items: center;
  justify-content: space-between;
}
#main .cont .option .item {
  width: 330rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  line-height: 86rpx;
  text-align: center;
  color: #fff;
}
#main .cont .option .item.share {
  background: #fa4756;
}

#main .cont .option .item.pay {
  background: #b1b5b7;
}

#main .list {
  padding: 30rpx;
}
#main .list .title {
  padding: 0 0 20rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 24rpx;
  
}


#main .list .item {
  padding: 22rpx 0;
  border-bottom: 1rpx solid #ddd;
}

#main .list .item .user-photo {
  width: 85rpx;
  height: 85rpx;
  background: #ddd;
  margin-right: 30rpx;
}

#main .list .cutdwon-info_t {
  font-size: 26rpx;
  line-height: 26rpx;
  justify-content: space-between;
}
#main .list .cutdwon-info_t .price {
  color: #fa4756
}
#main .list .time {
  margin-top: 20rpx;
  font-size: 21rpx;
  color: #b1b5b7;
}