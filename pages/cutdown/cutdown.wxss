page {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-flex-flow: column;
  flex-direction: column;
}

#main {
  -webkit-box-flex: 1;
  flex: 1;
  width: 100%;
  overflow: hidden;
}

#footer {
  width: 100%;
  height: 50px;
  box-sizing: border-box;
  border-top: 1rpx solid #ddd;
}

#footer .item {
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

#footer .item:first-child {
  border-right: 1rpx solid #ddd;
}

#footer text.active{
  color: #e02e24
}
image {
  width: 100%;
  height: 100%;
}

.all-cutdown .banner {
  height: 280rpx;
  background: #ddd;
}

.all-cutdown .banner image {
  width: 100%;
  height: 100%;
}

.all-cutdown .list {
  padding: 25rpx;
}

.all-cutdown .list .item {
  height: 300rpx;
  border-top: 1rpx solid #ddd;
  align-items: center;
}

.all-cutdown .list .item .goods-img {
  width: 240rpx;
  height: 240rpx;
  margin-right: 25rpx;
  background: #ddd;
}

.all-cutdown .goods-info {
  -webkit-box-flex: 1;
  flex: 1;
}

.all-cutdown .goods-info .goods-title {
  font-size: 28rpx;
  line-height: 35rpx;
  min-height: 70rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.all-cutdown .goods-info .num {
  margin: 30rpx 0 50rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #8e8e8e;
}

.all-cutdown .goods-info .goods-prop {
  align-items: center;
  justify-content: space-between;
}

.all-cutdown .goods-info .old-price {
  font-size: 26rpx;
  line-height: 26rpx;
  /* line-height: 24rpx; */
  margin-bottom: 10rpx;
  color: #8e8e8e;
}

.all-cutdown .goods-info .goods-prop .now-price {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #d55848;
}

.all-cutdown .goods-info .btn {
  height: 70rpx;
  width: 165rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 5rpx;
  color: #fff;
  background: red;
}

/* 我的砍价 */

.my-cutdown {
  background: #f0f0f0;
}

.my-cutdown .list .item {
  margin-bottom: 15rpx;
  padding: 20rpx 20rpx 0 20rpx;
  align-items: flex-start;
}

.my-cutdown .item .goods-img {
  margin-right: 20rpx;
  width: 170rpx;
  height: 170rpx;
  background: #ddd;
}

.my-cutdown .item  .goods-title {
  font-size: 26rpx;
  line-height: 32rpx;
  min-height: 64rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.my-cutdown .item .cutdown-tip {
  margin-top: 50rpx;
  font-size: 26rpx;
}

.my-cutdown .item .user-option {
  height: 100rpx;
  font-size: 26rpx;
  align-items: center;
}

.my-cutdown .item .user-option .item {
  font-size: 26rpx;
  color: #646464;
}

.my-cutdown .item .user-option .btn {
  margin-left: 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background: #e02e24;
  color: #fff;
}
