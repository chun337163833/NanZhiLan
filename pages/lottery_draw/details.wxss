/* pages/lottery_draw/details.wxss */
page {
  background: #eaeaea;
}

.banner {
  width: 100%;
  height: 750rpx;
  background: #ddd;
}

.banner image {
  width: 100%;
  height: 100%;
}
.goods {
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.goods .goods-title {
  font-size: 32rpx;
  line-height: 40rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.goods .goods-price {
  margin-top: 45rpx;
  align-items: center;
}

.goods .goods-price .now-price {
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #ce4031;
}

.goods .goods-price .old-price {
  font-size: 24rpx;
  color: #999;
}

.rules {
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.rules .title {
  font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  color: #616161;
}

.rules .cont {
  font-size: 24rpx;line-height: 36rpx;
}

.goods-details {
  padding: 20rpx;
}
.goods-details .title{
font-size: 32rpx;
  line-height: 40rpx;
  text-align: center;
  color: #616161;
}

#footer {
  width: 100%;
  height: 45px;
  box-sizing: border-box;
  border: 1px solid #ddd;
  background: red;
  color: #fff;
  line-height: 45px;
  text-align: center
}
