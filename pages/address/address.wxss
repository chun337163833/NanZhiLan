/* pages/address/address.wxss */

page {
  font-family: '微软雅黑';
  font-size: 32rpx;
  background: #eee;
  height: 100%;
}
.list .item {
  background: #fff;
  margin-bottom: 20rpx;
}
.list .item .cont {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #ddd;
}

.list .item .cont .text {
  width: 80%;
}

.list .item .cont .row {
  font-size: 32rpx;
  line-height: 32rpx;
}

.list .item .cont .userInfo {
  margin-bottom: 20rpx;
}

.list .item .cont .userAddress {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.list .item .state {
  color: #de2e25;
  text-align: center;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 120rpx;
  border: 1rpx solid #de2e25;
  border-radius:10rpx; 
}

.list .item .toolbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: #bbb;
}
.list .item .toolbar .toolBtn{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.list .item .toolbar .toolBtn icon{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #bbb;
  margin-right: 10rpx;
}
.list .item .toolbar .default{
  flex: 1;
}

.list .item .toolbar .default.checked icon{
  background: #de2e25;
  border: none;
}
.list .item .toolbar .default.checked text{
  color: #de2e25;
}


#addAddress {
  width: 100%;
  height: 44px;
  background: #08c303;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;

  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center
}
